@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Team Details</title>
</head>
<body>
    @Html.ActionLink("Главная", "Index", "Home")
    @Html.ActionLink("Результаты", "Index", "Event")
    @Html.ActionLink("Результаты матчей", "Index", "Event")
    <div style="width:90%; margin:0 auto; align-items: center">
        <table id="teamResultTable">
            <thead>
                <tr>
                    <th>Team 1</th>
                    <th>Score</th>
                    <th>Team2</th>
                    <th>Date</th>
                </tr>
            </thead>
        </table>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @* Load datatable css *@
    <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />

    @* Load DataTable js here *@
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>

    <script>
        $(document).ready(function () {
            $("#teamResultTable").DataTable({
                "processing": false,
                "serverSide": true,
                "filter": false,
                "orderMulti": false,
                "ajax": {
                    "url": "/TeamDetails/LoadResults",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                        { "data": "TeamFirst", "team1": "TeamFirst", "autoWidth": true },
                        { "data": "Score", "score": "Score", "autoWidth": true },
                        { "data": "TeamSecond", "team2": "TeamSecond", "autoWidth": true },
                        { "data": "Date", "date": "Date", "autoWidth": true }
                ]
            });
        });
    </script>

    <hr />
</body>
</html>
